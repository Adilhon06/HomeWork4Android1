<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_space_for_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/number_code_of_kyrgyzstan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="@string/go_to_whatsap"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/et_find_on_youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_youtube"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="@string/go_to_gallery"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/et_find_on_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_google"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="@string/go_to_gallery"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_second_activity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:text="@string/go"
        android:textStyle="italic"
        android:textSize="26sp"
        android:backgroundTint="@color/black"/>

</LinearLayout>